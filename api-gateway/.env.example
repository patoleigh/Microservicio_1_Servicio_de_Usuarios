# Configuración para desarrollo local
APP_NAME=api-gateway
APP_VERSION=v1
ENV=development
JWT_ALG=HS256

# JWT Secret (debe coincidir con el del users-service)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# URLs de microservicios (para desarrollo local con port-forward)
# En K8s estas se toman del ConfigMap
USERS_SERVICE_URL=http://localhost:8080
MODERATION_SERVICE_URL=http://localhost:8001
MESSAGES_SERVICE_URL=http://localhost:8002
SEARCH_SERVICE_URL=http://localhost:8003
PRESENCE_SERVICE_URL=http://localhost:8004
CHANNEL_SERVICE_URL=http://localhost:8005

# Root path (vacío para desarrollo local)
ROOT_PATH=
